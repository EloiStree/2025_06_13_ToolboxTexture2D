#pragma kernel CSMain

RWTexture2D<float4> m_source;
RWTexture2D<float4> m_result;
int m_width;
int m_height;
int m_pixelCount;

[numthreads(8, 8, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    if (id.x >= m_width || id.y >= m_height)
        return;
    
    // Inverse color first
    float4 srcColor = m_source[id.xy];
    float4 invColor = float4(1.0 - srcColor.x, 1.0 - srcColor.y, 1.0 - srcColor.z, srcColor.w);

    // Inverse permute: BGR -> RGB
    float4 color = float4(invColor.z, invColor.y, invColor.x, invColor.w);
    m_result[id.xy] = color;
}
