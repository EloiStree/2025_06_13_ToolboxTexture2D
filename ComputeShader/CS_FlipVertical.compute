#pragma kernel CSMain

RWTexture2D<uint4> m_source;
RWTexture2D<uint4> m_result;
int m_width;
int m_height;

[numthreads(8, 8, 1)]
void CSMain(uint3 id : SV_DispatchThreadID)
{
    if (id.x >= m_width || id.y >= m_height)
        return;

    int2 flippedCoord = int2(
        id.x,
        m_height - 1 - id.y
    );

    float4 pixel = m_source[id.xy];
    m_result[flippedCoord] = pixel;
}
